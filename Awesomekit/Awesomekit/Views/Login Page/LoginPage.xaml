            <!--  Buttons   -->
                <Frame OutlineColor="Gray" Opacity="1" Margin="10,0,10,0" BackgroundColor="#fefefe">
                <StackLayout >
            <Button Text="Scan QR Code" TextColor="White" BackgroundColor="#48120a" />
            <Button Text="Enter Code" Margin="0,10,0,0" BackgroundColor="#48120a" TextColor="White" Clicked="Handle_Clicked"/>
            <Button Text="Login" Margin="0,10,0,0" TextColor="White" BackgroundColor="#48120a"/>   
                        </StackLayout>
                    </Frame>
        </StackLayout>
